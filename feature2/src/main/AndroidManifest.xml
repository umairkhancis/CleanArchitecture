<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.noorifytech.feature2">

    <dist:module
        dist:instant="false"
        dist:title="@string/title_feature2">
        <dist:delivery>
            <dist:install-time />
        </dist:delivery>
        <dist:fusing dist:include="true" />
    </dist:module>

    <application>
        <activity android:name="com.noorifytech.feature2.view.activity.MoviesListActivity">
            <intent-filter>
                <action android:name="com.noorifytech.feature2.view.activity.MoviesListActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.noorifytech.feature2.view.activity.MovieDetailsActivity">
            <intent-filter>
                <action android:name="com.noorifytech.feature2.view.activity.MovieDetailsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>

